<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_5"
    android:paddingRight="@dimen/space_5" >

    <include layout="@layout/view_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/personal_line_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_8"
        android:paddingTop="@dimen/space_8" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="@string/person_name"            
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/personalcenter_username_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:gravity="right"
            android:textColor="@color/grayslate"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <include layout="@layout/view_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/personal_line_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_8"
        android:paddingTop="@dimen/space_8" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="@string/person_department"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/personalcenter_department_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:gravity="right"
            android:textColor="@color/grayslate"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <include layout="@layout/view_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/personal_line_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_8"
        android:paddingTop="@dimen/space_8" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="@string/person_telephone"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/personalcenter_telephone_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:gravity="right"
            android:textColor="@color/grayslate"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <include layout="@layout/view_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/personal_line_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_8"
        android:paddingTop="@dimen/space_8" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="@string/person_email"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/personalcenter_email_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:gravity="right"
            android:textColor="@color/grayslate"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.gta.scpoa.views.BaseView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notice_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.gta.scpoa.views.CommonTopView
            android:id="@+id/notice_commontop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <com.gta.scpoa.views.CommonBottomView
            android:id="@+id/notice_commonbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/notice_commonbottom"
            android:layout_below="@id/notice_commontop"
            android:orientation="vertical" >

            <com.gta.scpoa.views.XListView
                android:id="@+id/notice_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/container_background_color" >
            </com.gta.scpoa.views.XListView>
        </LinearLayout>
    </RelativeLayout>

</com.gta.scpoa.views.BaseView>
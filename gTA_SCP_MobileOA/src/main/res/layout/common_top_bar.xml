<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/topbar_layout"
    android:background="@drawable/common_top_bar_bg"
    android:padding="4dp" >

    <!-- 中：仅有一个TextView -->

    <TextView
        android:id="@+id/topbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/space_15"
        android:visibility="gone" />

    <!-- 左：ImageView\ImageButton\TextView -->

    <ImageView
        android:id="@+id/topbar_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_8"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/college_logo1"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/topbar_back_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_8"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/backup_selector"
        android:visibility="gone" />

    <TextView
        android:id="@+id/topbar_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_8"
        android:gravity="center"
        android:textColor="@drawable/right_button_selector"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />

    <!-- 右: ImageBotton\TextView -->

    <ImageButton
        android:id="@+id/topbar_add_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_8"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:src="@drawable/topbar_addbtn_selector"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/topbar_forward_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_8"
        android:contentDescription="@string/app_name"
        android:src="@drawable/testa4p"
        android:visibility="gone" />

    <TextView
        android:id="@+id/topbar_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_8"
        android:gravity="center"
        android:textColor="@drawable/right_button_selector"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />

</RelativeLayout>